# VPS Public IP/Domain (used for frontend API calls)
# Replace YOUR_VPS_IP with the actual IP or domain of your VPS
VPS_PUBLIC_URL=http://YOUR_VPS_IP

# OpenSearch Neural Search Configuration
# Run this on VPS to find the model_id:
# curl -X GET "http://localhost:9200/_plugins/_ml/models/_search" -H "Content-Type: application/json" -d '{"query":{"match_all":{}}}'
OPENSEARCH_MODEL_ID=your_model_id_from_vps
OPENSEARCH_INDEX=dutch-companies-vector-index
VECTOR_FIELD=embedding_vector

# API Keys
ANTHROPIC_API_KEY=your_anthropic_key
GEMINI_API_KEY=your_gemini_key
NOTION_API_KEY=your_notion_api_key
